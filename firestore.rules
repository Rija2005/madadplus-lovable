rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Reports can be read by any authenticated user, but only created, updated, or deleted by the owner.
    match /reports/{reportId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Ambulance dispatches follow the same pattern as reports.
    match /ambulanceDispatches/{dispatchId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Rule for user-specific documents, if any.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to store and update their own FCM tokens.
    match /fcmTokens/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
